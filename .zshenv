export EDITOR=nvim
export TERMINAL=alacritty
export BROWSER=firefox
export FILEMAN=nemo

alias dotfiles="git --git-dir=$HOME/.dotfiles --work-tree=$HOME"

alias die="sudo poweroff"
alias rbt="sudo reboot"

alias v="$EDITOR"
alias s="sudo"
alias mi="make install"
alias ll="ls -lA"
alias ls="ls"
alias mf="mkf"
alias md="mkdir"
alias fm="vifm"

alias g="git"
alias gs="git status"
alias gcm="git commit -a -m"
alias ga="git add"
alias gpl="git pull"
alias gp="git push"
alias gi="git init"
alias gc="git clone"
